<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".chooseCategory">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Category"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/md_black_1000"
        android:fontFamily="sans-serif-condensed-light"
        android:id="@+id/text"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@+id/text"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        >
      <!-- <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
       />-->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@mipmap/ic_launcher"
                    android:id="@+id/image"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/image"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:text="First Category"
                    android:textColor="@color/md_black_1000"
                    android:textSize="20sp"
                    android:padding="40dp"
                    />
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@mipmap/ic_launcher"
                    android:id="@+id/image2"
                    android:layout_below="@+id/image"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/image2"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_below="@+id/image"
                    android:text="Second Category"
                    android:textColor="@color/md_black_1000"
                    android:textSize="20sp"
                    android:padding="40dp"
                    android:layout_marginTop="10dp"
                    />
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@mipmap/ic_launcher"
                    android:id="@+id/image3"
                    android:layout_below="@+id/image2"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/image3"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_below="@+id/image2"
                    android:text="Third Category"
                    android:textColor="@color/md_black_1000"
                    android:textSize="20sp"
                    android:padding="40dp"
                    android:layout_marginTop="10dp"
                    />
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@mipmap/ic_launcher"
                    android:id="@+id/image4"
                    android:layout_below="@+id/image3"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/image4"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_below="@+id/image3"
                    android:text="Fourth Category"
                    android:textColor="@color/md_black_1000"
                    android:textSize="20sp"
                    android:padding="40dp"
                    android:layout_marginTop="10dp"
                    />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </ScrollView>
</RelativeLayout>